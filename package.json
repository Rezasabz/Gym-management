{
    "name": "gym-management",
    "version": "1.0.2",
    "productName": "Gym Management",
    "description": "A desktop application for managing gym members, subscriptions, and payments.",
    "main": "./out/main/index.js",
    "author": "Reza Sabzi Nejad",
    "homepage": "http://cleft.sbs",

    "build": {
        "appId": "com.example.gymManagement",
        "win": {
          "icon": "build/favicon.ico"
        },
        "mac": {
          "icon": "build/favicon.icns"
        },
        "linux": {
          "icon": "build/favicon.png"
        }
      },

    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "npm run build && electron-builder --dir",
        "build:win": "npm run build && electron-builder --win",
        "build:mac": "npm run build && electron-builder --mac",
        "build:linux": "npm run build && electron-builder --linux"
    },
    "dependencies": {
        "@alireza-ab/vue-persian-datepicker": "^2.3.2",
        "@cafebazaar/emrooz": "^0.1.7",
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/utils": "^3.0.0",
        "@electron/fuses": "^1.8.0",
        "@heroicons/vue": "^2.2.0",
        "@majidh1/jalalidatepicker": "^0.9.8",
        "@tailwindcss/vite": "^4.0.6",
        "apexcharts": "^4.5.0",
        "better-sqlite3": "^11.8.1",
        "flowbite": "^3.1.2",
        "jalali-moment": "^3.3.11",
        "lodash-es": "^4.17.21",
        "npm": "^11.1.0",
        "pinia": "^3.0.1",
        "sweetalert2": "^11.17.2",
        "vazirmatn": "^33.0.3",
        "vue-router": "^4.5.0",
        "vue3-persian-datetime-picker": "^1.2.2",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config": "1.0.2",
        "@rushstack/eslint-patch": "1.10.3",
        "@vitejs/plugin-vue": "5.0.5",
        "@vue/eslint-config-prettier": "9.0.0",
        "autoprefixer": "^10.4.20",
        "daisyui": "^4.12.23",
        "electron": "^35.0.0",
        "electron-builder": "^24.13.3",
        "electron-vite": "^2.3.0",
        "eslint": "8.57.0",
        "eslint-plugin-vue": "9.26.0",
        "husky": "^9.1.7",
        "postcss": "^8.5.2",
        "prettier": "^3.3.2",
        "tailwindcss": "^3.4.17",
        "tailwindcss-animated": "^2.0.0",
        "vite": "^5.3.1",
        "vue": "^3.4.30"
    }
